<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <TextBlock x:Name="ResultLabel" 
                   Grid.Row="0" 
                   Grid.ColumnSpan="4" 
                   FontSize="36" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Right" 
                   Margin="10"/>
        
        <Button Content="C" Grid.Row="0" Grid.Column="0" Click="Delete_click"/>
        <Button Content="," Grid.Row="0" Grid.Column="1" Click="DecimalPoint_Click"/>
        
        <Button Content="1" Grid.Row="1" Grid.Column="0" Click="Button_Click"/>
        <Button Content="2" Grid.Row="1" Grid.Column="1" Click="Button_Click"/>
        <Button Content="3" Grid.Row="1" Grid.Column="2" Click="Button_Click"/>
        <Button Content="+" Grid.Row="1" Grid.Column="3" Click="Operation_Click"/>
        
        <Button Content="4" Grid.Row="2" Grid.Column="0" Click="Button_Click"/>
        <Button Content="5" Grid.Row="2" Grid.Column="1" Click="Button_Click"/>
        <Button Content="6" Grid.Row="2" Grid.Column="2" Click="Button_Click"/>
        <Button Content="-" Grid.Row="2" Grid.Column="3" Click="Operation_Click"/>

        <Button Content="7" Grid.Row="3" Grid.Column="0" Click="Button_Click"/>
        <Button Content="8" Grid.Row="3" Grid.Column="1" Click="Button_Click"/>
        <Button Content="9" Grid.Row="3" Grid.Column="2" Click="Button_Click"/>
        <Button Content="*" Grid.Row="3" Grid.Column="3" Click="Operation_Click"/>

        <Button Content="/" Grid.Row="4" Grid.Column="0" Click="Operation_Click"/>
        <Button Content="0" Grid.Row="4" Grid.Column="1" Click="Button_Click"/>
        <Button Content="%" Grid.Row="4" Grid.Column="2" Click="Operation_Click"/>
        <Button Content="=" Grid.Row="4" Grid.Column="3" Click="Equal_Click"/>
        

    </Grid>
</Window>
